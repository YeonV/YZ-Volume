<Window x:Class="YZ_Volume.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="YZ-Volume" 
        Width="400" MaxHeight="500"
        WindowStyle="None" 
        AllowsTransparency="True" 
        Background="Transparent"
        ShowInTaskbar="False"
        SizeToContent="Height"
        WindowStartupLocation="Manual">

    <Border Background="#202020" CornerRadius="8" BorderBrush="#444" BorderThickness="1">
        <!-- This new Grid simply overlays the button on top of the list -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <!-- NEW: Row for the Preset Selector -->
                <RowDefinition Height="*" />
                <!-- Row for the device list -->
            </Grid.RowDefinitions>

            <!-- NEW: Preset Selector ComboBox in the top row -->
            <ComboBox x:Name="PresetComboBox" 
                      Grid.Row="0" 
                      Margin="15,10,45,10"
                      SelectionChanged="PresetComboBox_SelectionChanged">
                
                <!--
                <ComboBoxItem Content="Preset 1"/>
                <ComboBoxItem Content="Preset 2"/>
                <ComboBoxItem Content="Preset 3"/>
                -->
            </ComboBox>

            <!-- Device list is now in the second row -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <!-- This is now a container for BOTH panels -->
                <StackPanel Margin="15,0,15,40">
                    <!-- The original panel for Windows devices -->
                    <StackPanel x:Name="DeviceListPanel" />

                    <!-- NEW: Separator and Panel for Matrix Controls -->
                    <Separator x:Name="MatrixSeparator" 
                               Background="#444" 
                               Margin="0,10"
                               Visibility="Collapsed"/>

                    <StackPanel x:Name="MatrixControlsPanel" />
                </StackPanel>
            </ScrollViewer>

            <!-- The Settings Button still floats on top of everything -->
            <Button Style="{StaticResource SettingsIconButtonStyle}" 
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Margin="0,0,5,7"
                    Click="SettingsButton_Click" />
        </Grid>
    </Border>
</Window>