<Window x:Class="YZ_Volume.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="YZ-Volume Settings" Height="600" Width="550"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None" 
        AllowsTransparency="True"
        Background="Transparent"
        Icon="icon.ico">

    <Border Background="#202020" CornerRadius="8" BorderBrush="#444" BorderThickness="1"
            MouseLeftButtonDown="Window_MouseLeftButtonDown">

        <Grid Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <!-- Main content area that will scroll -->
                <RowDefinition Height="Auto" />
                <!-- Fixed button bar at the bottom -->
            </Grid.RowDefinitions>

            <!-- The ScrollViewer now contains all the settings sections -->
            <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
                <StackPanel>

                    <!-- VBAN SECTION -->
                    <StackPanel>
                        <!-- Main VBAN Toggle Row -->
                        <Border BorderBrush="#444" BorderThickness="0,0,0,1" Padding="0,0,0,15">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <ToggleButton x:Name="VbanToggleButton" Content="VBAN" Width="85" Style="{StaticResource PrimaryToggleButtonStyle}"/>
                                <TextBlock Grid.Column="1" Text="IP Address:" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="10,0,5,0"/>
                                <TextBox x:Name="VbanIpTextBox" Grid.Column="2" Width="100"/>
                                <TextBlock Grid.Column="3" Text="Port:" VerticalAlignment="Center" Margin="10,0,5,0"/>
                                <TextBox x:Name="VbanPortTextBox" Grid.Column="4" Width="60"/>
                            </Grid>
                        </Border>

                        <!-- DYNAMIC TEST SECTION -->
                        <StackPanel x:Name="VbanTestPanel" Margin="0,15,0,0">
                            <!-- Preset Selector -->
                            <Grid Margin="0,0,0,10">
                                <ComboBox x:Name="PresetComboBox" SelectionChanged="PresetComboBox_SelectionChanged">
                                    <!-- Items will be populated by code -->
                                    <!--
                                        <ComboBoxItem Content="Preset 1"/>
                                        <ComboBoxItem Content="Preset 2"/>
                                        <ComboBoxItem Content="Preset 3"/>
                                     -->
                                </ComboBox>
                            </Grid>

                            <!-- Quick Test Buttons -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Button Grid.Column="0" Content="&#xE760;" Click="TestGainUp_Click" Style="{StaticResource TestIconButtonStyle}" Margin="0,0,5,0" ToolTip="Gain +1"/>
                                <Button Grid.Column="1" Content="&#xE761;" Click="TestGainDown_Click" Style="{StaticResource TestIconButtonStyle}" Margin="5,0,5,0" ToolTip="Gain -1"/>
                                <Button Grid.Column="2" Content="&#xE74F;" Click="TestMuteToggle_Click" Style="{StaticResource TestIconButtonStyle}" Margin="5,0,0,0" ToolTip="Toggle Mute"/>
                            </Grid>

                            <!-- Custom Command Sender -->
                            <Grid Margin="0,10,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="50"/>
                                </Grid.ColumnDefinitions>
                                <TextBox x:Name="CustomCommandTextBox" Grid.Column="0" Text="PresetPatch[1].Gain = 0.0"/>
                                <Button Grid.Column="1" Content="&#xE724;" Click="SendCustomCommand_Click" Style="{StaticResource TestIconButtonStyle}" Margin="10,0,0,0" ToolTip="Send Command"/>
                            </Grid>
                        </StackPanel>
                    </StackPanel>

                    <!-- DEVICE LIST SECTION -->
                    <StackPanel x:Name="SettingsDeviceListPanel" Margin="0,15,0,0"/>

                </StackPanel>
            </ScrollViewer>

            <!-- BUTTON BAR - Now in its own fixed row at the bottom -->
            <Grid Grid.Row="1" Margin="0,15,0,0">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Save" Width="85" Click="SaveButton_Click" IsDefault="True" Style="{StaticResource PrimaryButtonStyle}"/>
                    <Button Content="Cancel" Width="85" Margin="5,0,0,0" Click="CancelButton_Click" IsCancel="True" Style="{StaticResource PrimaryButtonStyle}"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>

                       